<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Fragments.SectionFragment">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible"
        app:SpinKit_Color="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/admin_allOrder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="invisible">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp">

                    <TableRow>

                        <TextView
                            style="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:layout_margin="10dp"
                            android:padding="3dip"
                            android:text="المجموع"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <TextView
                            style="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:layout_margin="10dp"
                            android:gravity="right"
                            android:padding="3dip"
                            android:text="خدمه التوصيل"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <TextView
                            style="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:layout_margin="10dp"
                            android:padding="3dip"
                            android:text="طلبك"
                            android:textColor="#000000"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/admin_allOrderPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:padding="3dip" />

                        <TextView
                            android:id="@+id/_delivery_price"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:padding="3dip"
                            android:text="10 جنيه" />

                        <TextView
                            android:id="@+id/admin_total_price"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:padding="3dip" />

                    </TableRow>
                </TableLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/editTextTextnote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:ems="10"
                        android:hint="اكتب ملاحظه"
                        android:inputType="textPersonName" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/print_Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Print" />

                        <Button
                            android:id="@+id/unPair_Pair_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Button" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/user_order"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>